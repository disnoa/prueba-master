// Alternate navbars
// --------------------------------------------------

// Banco navbar
.navbar--banco
  background-color $navbar--banco-bg
  border-color $navbar--banco-border
  border-radius 0
  padding 23px
  
  .brand img
  	height 50px
  	width 150px
  
  .navbar-brand
    color $navbar--banco-brand-color

    &:hover,
    &:focus
      color $navbar--banco-brand-hover-color
      background-color $navbar--banco-brand-hover-bg

  .navbar-text
    color $navbar--banco-color

  .navbar-nav
    > li > a
      color $navbar--banco-link-color

      &:hover,
      &:focus
        color $navbar--banco-link-hover-color
        background-color $navbar--banco-link-hover-bg

    > .active > a
      &,
      &:hover,
      &:focus
        color $navbar--banco-link-active-color
        background-color $navbar--banco-link-active-bg

    > .disabled > a
      &,
      &:hover,
      &:focus
        color $navbar--banco-link-disabled-color
        background-color $navbar--banco-link-disabled-bg

  .navbar-toggle
    border-color transparent

    &:hover,
    &:focus
      background-color transparent
    .icon-bar
      background-color $navbar--banco-toggle-icon-bar-bg

  .navbar-collapse,
  .navbar-form
    border-color $navbar--banco-border

  // Dropdown menu items
  .navbar-nav
    // Remove background color from open dropdown
    > .open > a
      &,
      &:hover,
      &:focus
        background-color $navbar--banco-link-active-bg
        color $navbar--banco-link-active-color

    @media (max-width $grid-float-breakpoint-max)
      // Dropdowns get custom display when collapsed
      .open .dropdown-menu
        > li > a
          color $navbar--banco-link-color
          &:hover,
          &:focus
            color $navbar--banco-link-hover-color
            background-color $navbar--banco-link-hover-bg
        > .active > a
          &,
          &:hover,
          &:focus
            color $navbar--banco-link-active-color
            background-color $navbar--banco-link-active-bg
        > .disabled > a
          &,
          &:hover,
          &:focus
            color $navbar--banco-link-disabled-color
            background-color $navbar--banco-link-disabled-bg


  // Links in navbars
  //
  // Add a class to ensure links outside the navbar nav are colored correctly.

  .navbar-link
    color $navbar--banco-link-color

    &:hover
      color $navbar--banco-link-hover-color

  .btn-link
    color $navbar--banco-link-color

    &:hover,
    &:focus
      color $navbar--banco-link-hover-color

    &[disabled],
    fieldset[disabled] &
      &:hover,
      &:focus
        color $navbar--banco-link-disabled-color
        

// Bars
.navbar-toggle
	margin: 2px
	.icon-bar
		display block
		width 41px
		height 2px
		border-radius 1px
	.icon-bar + .icon-bar
		margin-top 10px

@media (min-width: 768px) 
  .navbar--banco .navbar-nav > li:not(:first-child):before
    content: "|"
    color: #fff
    position: absolute
    top:9px
    left: -1px
  .navbar-nav 
    float: right
    top: -25px
    position: relative
  .nav>li>a 
    padding: 10px 8px